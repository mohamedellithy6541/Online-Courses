@model onlineCourses.Data.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}
<!-- Page info -->
<div class="page-info-section set-bg" data-setbg="../SiteImages/page-bg/3.jpg">
    <div class="container">
        <div class="site-breadcrumb">
            <a asp-action="Index" asp-controller="Home">Home</a>
            <span>Login</span>
        </div>
    </div>
</div>
<!-- Page info end -->

<h2 class="text-center">Login</h2>

<!-- Page -->
<section class="contact-page spad pb-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form-warp">
                    <div class="section-title text-white text-left">
                        <h2>Sign In</h2>
                    </div>
                    <form asp-action="Login" method="post" class="contact-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control" value="" placeholder="Username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        
                       
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RememberMe" /> Remember Me
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="site-btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page end -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
