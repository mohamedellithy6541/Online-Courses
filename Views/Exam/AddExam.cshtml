@model AddExamModel

@{
    ViewData["Title"] = "New Exam";
    SelectList listItems = new SelectList(ViewBag.courses, "Id", "Name");
}

<h1>Exam</h1>

<h4>Add Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddExam">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Course_ID" class="control-label"></label>
                <select asp-for="Course_ID" asp-items="listItems" class="form-control">
                    <option value="0" disabled selected>--Select Course--</option>
                </select>
                <span asp-validation-for="Course_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Course">Back to Courses</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
